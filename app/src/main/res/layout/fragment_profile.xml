<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/judul"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@color/Primary"
            app:backgroundTint="#187F83"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:text="Akun"
            android:textColor="@color/white"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_initials"
            android:layout_width="106dp"
            android:layout_height="106dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/circle_icon"
            android:gravity="center"
            android:text=""
            android:textColor="@color/black"
            android:textSize="40sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/judul" />

        <TextView
            android:id="@+id/name_profile"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/semi_bold"
            android:gravity="center"
            android:text="Siwi Indri"
            android:textSize="24sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profile_initials" />

        <Button
            android:id="@+id/btnProfile"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:padding="8dp"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="start|center"
            android:text="Edit Profile"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/name_profile"
            android:drawableLeft="@drawable/ic_profile"
            android:drawableRight="@drawable/ic_arrow_forward"
            app:cornerRadius="10dp"/>
        <Button
            android:id="@+id/btnFaq"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginTop="15dp"
            android:padding="8dp"
            android:drawablePadding="20dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnProfile"
            android:text="Informasi Bantuan"
            android:textAllCaps="false"
            android:gravity="start|center"
            android:drawableLeft="@drawable/ic_info"
            android:drawableRight="@drawable/ic_arrow_forward"
            app:cornerRadius="10dp"/>

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:drawableLeft="@drawable/ic_logout"
            android:gravity="start|center"
            android:padding="8dp"
            android:drawablePadding="20dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:text="Logout"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:backgroundTint="@color/btnColor"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/btnFaq"
            android:drawableRight="@drawable/ic_arrow_forward"
            app:cornerRadius="10dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>